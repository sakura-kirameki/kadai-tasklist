<% if @tasks.any? %>
  <% @tasks.each do |task| %>
    <div>
      <%= link_to task.user.name, user_path(task.user) %> <p>posted at <%= task.created_at %></p>
      <p><%= task.content %></p>
    </div>
    <div>
      <% if current_user == task.user %>
        <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </div>
  <% end %>
<% end %>